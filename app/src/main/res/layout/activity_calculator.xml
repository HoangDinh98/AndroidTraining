<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FirstActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/bg_gradient_skyline">

    <TextView
        android:id="@+id/text_screen"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:gravity="right"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textColor="#00489f"
        android:textStyle="bold"
        android:visibility="visible"
        android:textSize="22dp"
        android:text=""/>

    <TextView
        android:id="@+id/text_result"
        android:layout_below="@id/text_screen"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="1dp"
        android:background="#dadada"
        android:layout_marginBottom="30dp"
        android:gravity="right"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#00c154"
        android:text="0"/>

    <LinearLayout
        android:id="@+id/numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_below="@id/text_result"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:paddingVertical="10dp">
            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="0"/>
            <Button
                android:id="@+id/btn_multi"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="*"/>
            <Button
                android:id="@+id/btn_div"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="/"/>
            <Button
                android:id="@+id/btn_ac"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="AC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:paddingVertical="10dp">
            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="1"/>
            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="2"/>
            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="3"/>
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:paddingVertical="10dp">
            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="4"/>
            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="5"/>
            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="6"/>
            <Button
                android:id="@+id/btn_minus"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:paddingVertical="10dp">
            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="7"/>
            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="8"/>
            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="9"/>
            <Button
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:background="#00489f"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="="/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>