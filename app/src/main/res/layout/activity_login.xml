<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FirstActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/bg_gradient_skyline">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_logo"
        android:src="@drawable/wings_logo_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_width="4dp"
        app:civ_border_color="#fcb503"/>

    <EditText
        android:id="@+id/act_log_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:drawableLeft="@drawable/ic_email"
        android:background="@drawable/text_border_radius"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint=" Phone or Email"
        android:text=""
        />

    <EditText
        android:id="@+id/act_log_edit_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_log_edit_phone"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:drawableLeft="@drawable/ic_lock"
        android:background="@drawable/text_border_radius"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint=" Password"
        android:text=""
        />

    <Button
        android:id="@+id/act_log_btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/act_log_edit_password"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_border_radius"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Log in"/>

    <TextView
        android:id="@+id/txt_forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:layout_below="@id/act_log_btn_login"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

