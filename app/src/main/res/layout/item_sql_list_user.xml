<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/item_sql_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pokemon_01"/>
    <TextView
        android:id="@+id/item_sql_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_sql_avatar"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fd3943"
        android:text="Title"/>

    <TextView
        android:id="@+id/item_sql_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_sql_avatar"
        android:layout_below="@id/item_sql_name"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#c2ccff"
        android:text="Content"/>
</RelativeLayout>