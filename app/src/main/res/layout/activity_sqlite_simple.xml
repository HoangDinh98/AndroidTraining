<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_skyline"
    android:paddingHorizontal="20dp"
    tools:context=".SQLiteSimple">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/act_sql_logo"
        android:src="@mipmap/ic_launcher_round"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_width="4dp"
        app:civ_border_color="#fcb503"/>

    <EditText
        android:id="@+id/act_sql_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:drawableLeft="@drawable/ic_email"
        android:background="@drawable/text_border_radius"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint=" Full Name"
        android:text=""
        />

    <EditText
        android:id="@+id/act_sql_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:drawableLeft="@drawable/ic_lock"
        android:background="@drawable/text_border_radius"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint=" Email"
        android:text=""
        />

    <Button
        android:id="@+id/act_sql_btn_save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_border_radius"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Save"/>

    <Button
        android:id="@+id/act_sql_btn_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_border_radius"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="View"/>

</LinearLayout>